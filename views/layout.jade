html5

html
	head
		title= pageTitle
		link(rel="stylesheet" type="text/css" href="css/main.css")
	body
		header
			h1= pageTitle
		section#status
			ul
			if session.isLoggedIn
				li
					a(href="/logout") Logout
			else
				li
					a(href="/login") Login
				li
					a(href="/signup") Signup
		section#content
			block content
		script(src='js/main.js')